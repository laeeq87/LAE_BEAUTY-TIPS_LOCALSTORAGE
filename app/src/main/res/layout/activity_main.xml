<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="example.itsme.beautytips.MainActivity"
    android:background="@android:color/holo_red_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/beauty"
            android:layout_gravity="top"
            android:id="@+id/imageView2" />
    </LinearLayout>

    <Button
        android:text="Enter New Tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:id="@+id/newEntry"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_light"
        android:textColorLink="?android:attr/colorActivatedHighlight"
        style="@style/Widget.AppCompat.Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNewEntry"/>

    <Button
        android:text="Beauty Tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/beautyTips"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:onClick="onClickBeautyTips"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:layout_marginBottom="73dp"
        android:layout_above="@+id/newEntry"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
